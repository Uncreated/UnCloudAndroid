<resources>

    <style name="CloudTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonStyle">@style/button_style</item>
    </style>

    <style name="fab_menu_label_style">
        <item name="android:background">@drawable/fab_label_drawable</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="button_style">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
    </style>

</resources>
